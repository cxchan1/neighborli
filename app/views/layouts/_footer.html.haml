.fixed-action-btn
  %a.btn-floating.btn-large
    %i.large.material-icons mode_edit
  %ul
    %li
      %a.btn-floating.red
        %i.material-icons insert_chart
    %li
      %a.btn-floating.yellow.darken-1
        %i.material-icons format_quote
    %li
      %a.btn-floating.green
        %i.material-icons publish
    %li
      %a.btn-floating.blue
        %i.material-icons attach_file
%footer#main-footer
  .container
    .row.center-align
      =link_to 'Home', root_path
      - if user_signed_in?
        =link_to 'Profile', user_path(current_user)
        =link_to 'Users', users_path
        =link_to 'Transactions', transactions_path
        =link_to 'Sign Out', destroy_user_session_path, method: :delete
        =link_to 'Categories', category_index_path
