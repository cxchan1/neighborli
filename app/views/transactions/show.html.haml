.section
  .container
    %p#notice= notice
    %h1 Single Transaction
.section
  .container
    %h2 Fancy Transaction
    .row
      .col.s6.offset-s3
        = render 'single', transaction: @transaction
.section
  .container
    %h2 Debug Transaction
    = render 'debugsingle', transaction: @transaction
.section
  .container
    = link_to 'New Transaction', new_transaction_path
.section
  - if current_user.id == @lender.id && @transaction.feedbacks.first.user_id == current_user.id || @transaction.feedbacks.first.user_id == current_user.id
    .container
      %h2= "Leave Feedback for #{@borrower.fname}"
      = render 'transactions/feedback', feedback: Feedback.new
  - elsif current_user.id == @borrower.id && @transaction.feedbacks.first.user_id == current_user.id || @transaction.feedbacks.first.user_id == current_user.id
    .container
      %h2= "Leave Feedback for #{@lender.fname}"
      = render 'transactions/feedback', feedback: Feedback.new
  - else
    .container
      = render 'transactions/show_feedback'
