<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Borrower</th>
      <th>Lender</th>
      <th>Status</th>
      <th>Expires at</th>
      <th>Starts at</th>
      <th>Type</th>
      <th>Has borrower feedback</th>
      <th>Has lender feedback</th>
      <th>Category</th>
      <th>Title</th>
      <th>Body</th>
      <th>Item location</th>
      <th>Loan duration</th>
      <th>Day rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.borrower_id %></td>
        <td><%= transaction.lender_id %></td>
        <td><%= transaction.status %></td>
        <td><%= transaction.expires_at %></td>
        <td><%= transaction.starts_at %></td>
        <td><%= transaction.action %></td>
        <td><%= transaction.has_borrower_feedback %></td>
        <td><%= transaction.has_lender_feedback %></td>
        <td><%= transaction.category %></td>
        <td><%= transaction.title %></td>
        <td><%= transaction.body %></td>
        <td><%= transaction.item_location %></td>
        <td><%= transaction.loan_duration %></td>
        <td><%= transaction.day_rate %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>
