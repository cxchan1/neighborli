.section
  .container
    %p#notice= notice
    %h1 Transactions

.section
  .container
    %table
      %thead
        %tr
          %th Borrower
          %th Lender
          %th Status
          %th Expires at
          %th Starts at
          %th Type
          %th Has borrower feedback
          %th Has lender feedback
          %th Category
          %th Title
          %th Body
          %th Item location
          %th Loan duration
          %th Day rate
          %th{colspan:  3}
      %tbody
        - @transactions.each do |transaction|
          %tr
            %td= transaction.borrower_id
            %td= transaction.lender_id
            %td= transaction.status
            %td= transaction.expires_at
            %td= transaction.starts_at
            %td= transaction.action
            %td= transaction.has_borrower_feedback
            %td= transaction.has_lender_feedback
            %td= transaction.category
            %td= transaction.title
            %td= transaction.body
            %td= transaction.item_location
            %td= transaction.loan_duration
            %td= transaction.day_rate
            %td= link_to 'Show', transaction
            %td= link_to 'Edit', edit_transaction_path(transaction)
            %td= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }

.section
  .container
    = link_to 'New Transaction', new_transaction_path
