.section
  .container
    .row
      %h2 Sign up
      .card
        .card-content
          = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f|
            = devise_error_messages!
            %span.card-title Required
            %hr
            .input-field
              = f.label "First Name"
              = f.text_field :fname, autofocus: true, autocomplete: "off"
            .input-field
              = f.label "Last Name"
              = f.text_field :lname, autofocus: true, autocomplete: "off"
            .input-field
              = f.label :email
              = f.email_field :email, autofocus: true, autocomplete: "email"
            .input-field
              = f.label :password
              - if @minimum_password_length
                %em= "(#{@minimum_password_length} characters minimum)"
              = f.password_field :password, autocomplete: "off"
            .input-field
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "off"
            %span.card-title.pt-2em Suggested
            %hr
            .input-field.file-field
              .btn
                %span Upload An Avatar
                = f.file_field :avatar
              .file-path-wrapper
                %input{type: "text", class: "file-path"}
            .card-action
              = f.submit "Sign up", class: "btn waves-effect waves-light green white-text"

= render "devise/shared/links"
