.section
  .container
    %h2 Users
    %ul.collection
      - @users.each do |user|
        %li.collection-item.avatar
          = image_tag user.avatar.url, class: 'circle'
          %span.title
            %i.material-icons perm_identity
            = link_to "#{user.fname} #{user.lname}", user_path(user)
          %p
            %i.material-icons mail_outline
            %a{href: "mailto:#{user.email}"}= user.email